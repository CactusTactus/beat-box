<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:endColor="@color/light_blue_300"
                android:startColor="@color/deep_orange_300" />
            <corners android:radius="@dimen/corner_radius_medium" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/stroke_width_medium"
                android:color="@color/deep_orange_300" />
            <corners android:radius="@dimen/corner_radius_medium" />
        </shape>
    </item>
</layer-list>